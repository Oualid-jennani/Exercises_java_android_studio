<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">
            <gradient android:startColor="#55ff00" android:endColor="#FF0" android:angle="45"/>
            <corners android:radius="10dp"/>
            <padding android:top="10dp" android:left="10dp" android:right="10dp" android:bottom="10dp"/>
            <stroke android:color="#000" android:width="1dp"/>
            <size android:width="100px"/>
        </shape>
    </item>

    <item>
        <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">
            <solid android:color="#00fff2"/>
            <corners android:radius="10dp"/>
            <padding android:top="10dp" android:left="10dp" android:right="10dp" android:bottom="10dp"/>
            <stroke android:color="#000" android:width="3dp"/>
            <size android:width="100px"/>
        </shape>
    </item>

</selector>